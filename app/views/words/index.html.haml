%h1 Words
%table.table
    %thead
        %tr.table-active
            %th
                ID
            %th
                CONTENT
            %th
                LANGUAGE
            %th 
                ACTION
        %tbody
            - @words.each do |word|
                %tr.table-success
                    %td
                        = word.id
                    %td
                        = word.content
                    %td
                        = word.language&.name
                    %td
                        = link_to("Show", word_path(word), class: 'btn btn-primary')
                        = link_to("Edit", edit_word_path(word), class: 'btn btn-primary')