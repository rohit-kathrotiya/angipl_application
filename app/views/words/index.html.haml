%h1 Words
%table.table
    %thead
        %tr.table-active
            %th
                ID
            %th
                VALUE
            %th
                LANGUAGE
            %th 
                ACTION
        %tbody
            - @words.each do |word|
                %tr.table-success
                    %td
                        = word.id
                    %td
                        = word.value
                    %td
                        = word.language
                    %td
                        = link_to("Show", word_path(word), class: 'btn btn-primary')